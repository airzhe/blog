
/*bootstrap*/
.navbar{border:none;background:#f7f5e7;min-height: 45px;margin:0;border-radius:0;}
.col-md-offset-3{width:22%;}
.col-md-6{width:56%;}
/*bootstrap end*/
body{background: #fff}
ul li{list-style: none;}
h1,h2,h3,h4,h5,h6{font-family:Bitter, Georgia, serif;}
h1{margin:33px 0;font-size: 28px;font-weight: bold;}
i{margin-right: 3px;}
.meta a{margin-right:12px;}
#site-header{background: url('../images/circle.png') no-repeat center top;background-size: 1600px auto;}
#site-header .home-link{color:#141412;color: #141412;display:block;	min-height: 230px;text-decoration: none;}
.site-title{font-size:60px;font-weight: bold;line-height: 1;margin:0;padding:58px 0 10px;}
.site-description{font:300 italic 24px "Source Sans Pro", Helvetica, sans-serif;margin:0;}

.navbar ul{margin:0;padding:0;}
.navbar ul li{display: inline-block;}
.navbar ul li a{color:#141412;display:block;font-size: 15px;line-height: 1;padding:15px 20px;text-decoration: none;}
.navbar .current-menu-item a{color:#bc360a;font-style:italic;}
.navbar ul li a:hover{background:#220e10;color:#fff;}
.navbar .search-form{padding-top:3px;}
.navbar .search-field{background: url('../images/search-icon.png') no-repeat 5px center;height:37px;padding-left:30px;padding-right:2px;background-color:transparent;
border:none;cursor:pointer;width:0;outline: none;
transition:width 400ms ease,background 400ms ease;
-webkit-transition:width 400ms ease,background 400ms ease;
-moz-transition:width 400ms ease,background 400ms ease;
-o-transition:width 400ms ease,background 400ms ease;
}
.navbar .search-field:focus{
	cursor:text;
	border:2px solid #d4d0ba;
}

.article {padding:30px 0;}
.article header{margin-bottom: 20px;}
.article h1{margin:0 0 5px;}
.article h1 a{color:#141412;}
.article h1 a:hover{color:#ea9629;}
.article .meta a{color:#bc360a;}
.article .meta a:hover{color:#bc360a;}
.article .content{line-height: 24px;margin-bottom:24px;}


.nav-links{padding:40px 0;background:#e8e5ce;}
.nav-previous{padding-left:240px;}
.nav-next{padding-right:240px;}
.nav-links a {
	color: #bc360a;
}

.nav-links a:hover {
	color: #ea9629;
	text-decoration: none;
}

.nav-links .meta-nav{
	background-color: #e63f2a;
	border-radius: 50%;
	color: #fff;
	display: inline-block;
	font-size: 26px;
	padding: 3px 0 8px;
	text-align: center;
	width: 50px;
	margin-right: 10px;
	padding: 17px 0 23px;
	width: 80px;
}
#site-footer{background: #220e10;padding:30px 0 50px;color:#fff;}
#site-footer .search-field{height:27px;padding:5px;width:200px;margin-top:20px;}
#site-footer ul{padding:0;}
#site-footer h3{font-style:italic; font-size:20px;margin-bottom:10px;}
#site-footer li{padding:5px 0;}
#site-footer a{color:#e6402a;}